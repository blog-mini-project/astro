---
import { lucia } from "../lib/auth"
const cookiename = lucia.sessionCookieName

import Base from "../layouts/base.astro"
import { Image } from "astro:assets"
import pen from "../../public/pen.png"
---

<Base title="blog" classes="min-h-screen flex flex-col items-center justify-center gap-2">
    <Image inferSize={true} src={pen} alt="pen" class='max-w-[90vw]' />
    <div class='text-3xl mb-2'>blog</div>
    <div class='w-[300px] max-w-[90vw] flex flex-col gap-2'>
      <button class='rounded-full w-full p-2' onclick="window.location.href='signup'">signup</button>
      <button class='rounded-full w-full p-2' onclick="window.location.href='login'">login</button>
      <button class='rounded-full w-full p-2' style="background-color: red;" onclick="window.location.href='about'">about</button>
    </div>
    <script define:vars={{ cookiename }}>

      var cookies = document.cookie.split(';').reduce((acc, cookie) => {
          const [name, value] = cookie.split('=').map(c => c.trim())
          acc[name] = value
          acc[name] = value
          return acc
      }, {})
  
          var checkifloggedin = cookies[cookiename] ?? null
          if (checkifloggedin) {
              window.location.href = "/home"
          }
      </script>
</Base>