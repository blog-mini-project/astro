---
import { getPostsByTag } from '../../lib/posts'
const { tag } = Astro.params
const posts = await getPostsByTag(tag)
---
<html>
  <body>
    <h1>Posts tagged with {tag}</h1>
    <ul>
      {posts.map(post => (
        <li>
          <a href={`/post/${post.id}`}>{post.title}</a>
        </li>
      ))}
    </ul>
  </body>
</html>